<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!--DO NOT REMOVE-->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        <!--font-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Overline</item>
    </style>

    <style name="TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/iran_sans_mobile_light</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_light</item>
    </style>

    <style name="TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/iran_sans_mobile_light</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_light</item>
    </style>

    <style name="TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_regular</item>
    </style>

    <style name="TextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_regular</item>
    </style>

    <style name="TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_regular</item>
    </style>

    <style name="TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/iran_sans_mobile_medium</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_medium</item>
    </style>

    <style name="TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_regular</item>
    </style>

    <style name="TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/iran_sans_mobile_medium</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_medium</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_regular</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_regular</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_regular</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/iran_sans_mobile_medium</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_medium</item>
    </style>

    <style name="TextAppearance.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="android:fontFamily">@font/iran_sans_mobile_regular</item>
    </style>

    <style name="TextAppearance.Switch" parent="TextAppearance.Button"/>



    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
<!--        <item name="titleTextAppearance">@style/TextAppearance.Headline6</item>-->
<!--        <item name="subtitleTextAppearance">@style/TextAppearance.Subtitle1</item>-->
    </style>




    <style name="ButtonIcon" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="cornerRadius">@dimen/medium_radius</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="strokeColor">@color/colorGreyLight</item>
    </style>


    <style name="Widget.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/small_radius</item>
    </style>

    <style name="Widget.Button.Large" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/small_radius</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Button.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/small_radius</item>
    </style>

    <style name="Widget.Button.In.Container" parent="Widget.Button.TextButton">
        <item name="android:gravity">start|center</item>
        <item name="cornerRadius">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:paddingEnd">@dimen/large</item>
        <item name="android:paddingStart">@dimen/large</item>
    </style>

    <style name="Widget.Card.Container" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">@dimen/medium_elevation</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>






    <!--for com.alirezaafkar:sundatepicker-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="fontFamily">@font/iran_sans_mobile_regular</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/item_text_color</item>
    </style>

    <!--BottomSheetDialog style peekHight-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">600dp</item>
    </style>


    <style name="Hyperlink">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

</resources>